{
  "compilerOptions": {
    "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
    "target": "es2016",                       
    "lib": ["es6"],                           
    "module": "commonjs",                     
    "rootDir": "./",                         
    "resolveJsonModule": true,                
    "allowJs": true,                          
    "outDir": "./dist",                        
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                           
    "noImplicitAny": true,                    
    "skipLibCheck": true,
    "removeComments": false,
    "noEmit": false,
    "typeRoots": [
      "./node_modules/@types",
      "src/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src",
    "src/index.ts"
  ]
}